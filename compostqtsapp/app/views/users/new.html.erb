<h1>Sign Up</h1>
<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br />
<%= f.label :strength_level %>
<%= f.number_field :strength_level %><br />
<%= f.label :happiness %>
<%= f.number_field :happiness %><br />
<%= f.label :heatstroke %>
<%= f.number_field :heatstroke %><br />
<%= f.label :membership_years %>
  <%= f.number_field :membership_years %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <p>Admin? <%= f.check_box :admin, options = {:class => "user_admin"} %></p><br />
  <br />
  <%= f.submit %>
<% end %>
